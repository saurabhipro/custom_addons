<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Sequences -->
    <record id="seq_tax_transaction" model="ir.sequence">
        <field name="name">Tax Transaction</field>
        <field name="code">tax.transaction</field>
        <field name="prefix">TAX/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Common Tax Types -->
    <record id="tax_type_gst" model="tax.type">
        <field name="name">GST</field>
        <field name="code">GST</field>
        <field name="rate">18.0</field>
        <field name="description">Goods and Services Tax</field>
    </record>

    <record id="tax_type_igst" model="tax.type">
        <field name="name">IGST</field>
        <field name="code">IGST</field>
        <field name="rate">18.0</field>
        <field name="description">Integrated Goods and Services Tax</field>
    </record>

    <record id="tax_type_cgst" model="tax.type">
        <field name="name">CGST</field>
        <field name="code">CGST</field>
        <field name="rate">9.0</field>
        <field name="description">Central Goods and Services Tax</field>
    </record>

    <record id="tax_type_sgst" model="tax.type">
        <field name="name">SGST</field>
        <field name="code">SGST</field>
        <field name="rate">9.0</field>
        <field name="description">State Goods and Services Tax</field>
    </record>

    <record id="tax_type_tds" model="tax.type">
        <field name="name">TDS</field>
        <field name="code">TDS</field>
        <field name="rate">10.0</field>
        <field name="description">Tax Deducted at Source</field>
    </record>

    <!-- Property Tax -->
    <record id="tax_type_property" model="tax.type">
        <field name="name">Property Tax</field>
        <field name="code">PROPERTY</field>
        <field name="rate">2.0</field>
        <field name="description">Municipal Property Tax</field>
        <field name="category">property</field>
    </record>

    <!-- Water Tax -->
    <record id="tax_type_water" model="tax.type">
        <field name="name">Water Tax</field>
        <field name="code">WATER</field>
        <field name="rate">1.5</field>
        <field name="description">Municipal Water Tax</field>
        <field name="category">water</field>
    </record>

    <!-- Commercial Tax -->
    <record id="tax_type_commercial" model="tax.type">
        <field name="name">Commercial Tax</field>
        <field name="code">COMMERCIAL</field>
        <field name="rate">3.0</field>
        <field name="description">Municipal Commercial Tax</field>
        <field name="category">commercial</field>
    </record>
</odoo>
