<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_type_tree" model="ir.ui.view">
        <field name="name">tax.type.tree</field>
        <field name="model">tax.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="rate"/>
                <field name="transaction_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_tax_type_form" model="ir.ui.view">
        <field name="name">tax.type.form</field>
        <field name="model">tax.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_transactions" icon="fa-money">
                            <field string="Transactions" name="transaction_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="rate"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tax_type_search" model="ir.ui.view">
        <field name="name">tax.type.search</field>
        <field name="model">tax.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_tax_type" model="ir.actions.act_window">
        <field name="name">Tax Types</field>
        <field name="res_model">tax.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tax type
            </p>
        </field>
    </record>
</odoo>
