<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_transaction_tree" model="ir.ui.view">
        <field name="name">tax.transaction.tree</field>
        <field name="model">tax.transaction</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'paid'" decoration-warning="state == 'confirmed'" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="tax_type_id"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="tax_amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'paid'" decoration-warning="state == 'confirmed'" decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_tax_transaction_form" model="ir.ui.view">
        <field name="name">tax.transaction.form</field>
        <field name="model">tax.transaction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                    <button name="action_mark_paid" string="Mark as Paid" type="object" class="btn-primary" states="confirmed"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="tax_type_id"/>
                            <field name="date"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="tax_amount"/>
                            <field name="payment_date" attrs="{'invisible': [('state', 'not in', ['paid'])], 'required': [('state', '=', 'paid')]}"/>
                            <field name="payment_reference" attrs="{'invisible': [('state', 'not in', ['paid'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tax_transaction_search" model="ir.ui.view">
        <field name="name">tax.transaction.search</field>
        <field name="model">tax.transaction</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="tax_type_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Tax Type" name="tax_type" context="{'group_by': 'tax_type_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_tax_transaction_pivot" model="ir.ui.view">
        <field name="name">tax.transaction.pivot</field>
        <field name="model">tax.transaction</field>
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="date" type="row"/>
                <field name="tax_type_id" type="col"/>
                <field name="amount" type="measure"/>
                <field name="tax_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_tax_transaction_graph" model="ir.ui.view">
        <field name="name">tax.transaction.graph</field>
        <field name="model">tax.transaction</field>
        <field name="arch" type="xml">
            <graph sample="1">
                <field name="date"/>
                <field name="tax_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_tax_transaction" model="ir.actions.act_window">
        <field name="name">Tax Transactions</field>
        <field name="res_model">tax.transaction</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tax transaction
            </p>
        </field>
    </record>
</odoo>
