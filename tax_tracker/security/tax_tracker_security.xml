<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_tax_tracker_category" model="ir.module.category">
        <field name="name">Tax Tracker</field>
        <field name="description">User access level for Tax Tracker</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_tax_tracker_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_tax_tracker_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_tax_tracker_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_tax_tracker_category"/>
        <field name="implied_ids" eval="[(4, ref('group_tax_tracker_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="tax_transaction_rule_user" model="ir.rule">
            <field name="name">Tax Transaction: User can only see own company records</field>
            <field name="model_id" ref="model_tax_transaction"/>
            <field name="domain_force">[('company_id', '=', company_id)]</field>
            <field name="groups" eval="[(4, ref('group_tax_tracker_user'))]"/>
        </record>
    </data>
</odoo>
