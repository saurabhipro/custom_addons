<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- list and Form View for Zone Model -->
        <record id="view_zone_list" model="ir.ui.view">
            <field name="name">smkc.zone.list</field>
            <field name="model">smkc.zone</field>
            <field name="arch" type="xml">
                <list string="Zones">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_zone_form" model="ir.ui.view">
            <field name="name">smkc.zone.form</field>
            <field name="model">smkc.zone</field>
            <field name="arch" type="xml">
                <form string="Zone">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_zone" model="ir.actions.act_window">
            <field name="name">Zones</field>
            <field name="res_model">smkc.zone</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_zone_list"/>
        </record>

    </data>
</odoo>