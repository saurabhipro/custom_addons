            <field name="model">smkc.property.info</field>
            <field name="arch" type="xml">
                <list>
                    <field name="owner_id" optional="show"/>
                    <field name="upic_no" optional="show"/>
                    <field name="zone" optional="show"/>
                    <field name="new_zone_no" optional="show"/>
                    <field name="new_ward_no" optional="show"/>
