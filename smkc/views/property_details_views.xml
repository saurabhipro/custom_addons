                    <field name="no_of_rain_water_harvesting" optional="hide"/>
                    <field name="is_water_conn_status" optional="hide"/>
                    <field name="is_hand_pump" optional="hide"/>
                    <field name="no_of_hand_pump" optional="hide"/>
                    <field name="is_well" optional="hide"/>
                    <field name="no_of_well" optional="hide"/>
                    <field name="is_lift" optional="hide"/>
                    <field name="no_of_lift" optional="hide"/>
                    <field name="drain" optional="hide"/>
                    <field name="building_permissions" optional="hide"/>
                    <field name="building_advertise" optional="hide"/>
                    <field name="garbage_segrigation" optional="hide"/>
                    <field name="garbage_disposal" optional="hide"/>
                    <field name="septic_tank_yes_no" optional="hide"/>
                    <field name="water_meter_yes_no" optional="hide"/>
                    <field name="water_connection_year" optional="hide"/>
                    <field name="licence_no" optional="hide"/>
                    <field name="licence_date" optional="hide"/>
                    <field name="year_of_permission" optional="hide"/>
                    <field name="year_of_construction" optional="hide"/>
                    <field name="building_age" optional="hide"/>
                    <field name="building_year" optional="hide"/>
                    <field name="build_completion_date" optional="hide"/>
                    <field name="oid" optional="hide"/>
                    <field name="is_fire" optional="hide"/>
                    <field name="no_of_fire" optional="hide"/>
                    <field name="water_meter_condition" optional="hide"/>
                    <field name="is_water_motar" optional="hide"/>
                    <field name="water_connection_no" optional="hide"/>
                    <field name="water_consumer_no" optional="hide"/>
                    <field name="is_etp" optional="hide"/>
                    <field name="is_home_composting" optional="hide"/>
                    <field name="is_vermicompost" optional="hide"/>
                    <field name="is_echarging" optional="hide"/>
                    <field name="is_sewage_water" optional="hide"/>
                    <field name="is_const_permission" optional="hide"/>
                    <field name="const_completion_oc" optional="hide"/>
                    <field name="gunthewari_certificate" optional="hide"/>
                    <field name="is_bukhand" optional="hide"/>
                    <field name="is_construction" optional="hide"/>
                    <field name="total_no_of_people" optional="hide"/>
                    <field name="is_animals" optional="hide"/>
                    <field name="dog" optional="hide"/>
                    <field name="cat" optional="hide"/>
                    <field name="cow" optional="hide"/>
                    <field name="buffalo" optional="hide"/>
                    <field name="horse" optional="hide"/>
                    <field name="oax" optional="hide"/>
                    <field name="pig" optional="hide"/>
                    <field name="donkey" optional="hide"/>
                    <field name="other" optional="hide"/>
                    <field name="is_gotha" optional="hide"/>
                    <field name="oc_number" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Form -->
        <record id="view_property_info_form" model="ir.ui.view">
            <field name="name">smkc.property.info.form</field>
            <field name="model">smkc.property.info</field>
            <field name="arch" type="xml">
                <form string="Property Information">
                    <header>
                        <field name="property_status" widget="statusbar"  options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <field name="qr_code" widget='image' class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="owner_id"/>
                                <field name="upic_no"/>
                                <field name="zone"/>
                                <field name="new_zone_no"/>
                                <field name="new_ward_no"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </group>
                            <group>
                                <field name="mobile_no"/>
                                <field name="marathi_owner_name"/>
                                <field name="marathi_occupier_name"/>
                                <field name="marathi_owner_dukan_imarate_nav"/>
                                <field name="plot_area"/>
                                <field name="marathi_renter_name"/>
                            </group>
                        </group>
                        <group>
                            <field name="property_description"/>
                        </group>

                        <notebook>
                            <page string="Property Survey">
                                <field name="survey_line_ids" context="{'default_owner_name': marathi_owner_name, 'default_longitude':longitude, 'default_latitude':latitude}">
                                    <form string="Survey Parameters">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="address_line_1"/>
                                                    <field name="address_line_2"/>
                                                    <field name="colony_name"/>
                                                    <field name="street"/>
                                                    <field name="house_number"/>
                                                    <field name="unit"/>
                                                </group>

                                                <!-- Property Details -->
                                                <group>
                                                    <field name="total_floors"/>
                                                    <field name="floor_number"/>
                                                </group>

                                                <!-- Owner Information -->
                                                <group>
                                                    <field name="owner_name"/>
                                                    <field name="father_name"/>
                                                </group>

                                                <!-- Area Information -->
                                                <group>
                                                    <field name="area"/>
                                                    <field name="area_code"/>
                                                </group>

                                                <!-- Location Information -->
                                                <group>
                                                    <field name="longitude"/>
                                                    <field name="latitude"/>
                                                </group>

                                                <!-- Survey & Installer Information -->
                                                <group>
                                                    <field name="surveyer_id"/>
                                                    <field name="installer_id"/>
                                                </group>
                                            </group>
                                            <h4>Property Survey</h4>
                                            <group>
                                                <div class="row">
                                                    <div class="col">
                                                        <field name="property_image" widget="image" optional="show" 
                                                                        style="max-width: 100px; max-height: 100px;"/>
                                                    </div>
                                                    <div class="col">
                                                        <field name="property_image1" widget="image" optional="show" 
                                                            style="max-width: 100px; max-height: 100px;"/>
                                                    </div>
                                                </div>
                                            </group>
                                        </sheet>
                                    </form>
                                    <list string="Survey Parameters">
                                        <field name="owner_name"/>
                                        <field name="address_line_1"/>
                                        <field name="total_floors"/>
                                        <field name="area"/>
                                        <field name="longitude"/>
                                        <field name="latitude"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Animal Info">
                                <group>
                                    <group>
                                        <field name="is_animals"/>
                                        <field name="dog"/>
                                        <field name="cat"/>
                                        <field name="cow"/>
                                        <field name="buffalo"/>
                                    </group>
                                    <group>
                                        <field name="horse"/>
                                        <field name="oax"/>
                                        <field name="pig"/>
                                        <field name="donkey"/>
                                        <field name="other"/>
                                    </group>

                                </group>
                            </page>

                            <!-- Billing Information Tab -->
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="new_property_no"/>
                                        <field name="new_partition_no"/>
                                        <field name="new_city_survey_no"/>
                                        <field name="new_plot_no"/>
                                        <field name="old_zone_no"/>
                                        <field name="old_ward_no"/>
                                        <field name="old_property_no"/>
                                        <field name="bill_no"/>
                                        <field name="mobile_no"/>
                                        <field name="old_rental_value"/>
                                        <field name="old_rv"/>
                                        <field name="old_property_tax"/>
                                        <field name="old_total_tax"/>
                                        <field name="new_toilet_no"/>
                                        <field name="plot_taxable_area_sqft"/>
                                        <field name="marathi_owner_patta"/>
                                        <field name="marathi_owner_dukan_flat_no"/>
                                        <field name="comb_prop_remark"/>
                                        <field name="road_width"/>
                                        <field name="no_of_trees"/>

                                        <field name="is_solar"/>
                                        <field name="no_of_solar"/>
                                        <field name="is_bore"/>
                                        <field name="no_of_bore"/>
                                        <field name="is_rainwater_harvesting"/>
                                        <field name="no_of_rain_water_harvesting"/>
                                        <field name="is_water_conn_status"/>
                                        <field name="is_hand_pump"/>
                                        <field name="no_of_hand_pump"/>
                                        <field name="is_well"/>
                                        <field name="no_of_well"/>
                                    </group>
                                    <group>
                                        <field name="is_lift"/>
                                        <field name="no_of_lift"/>
                                        <field name="drain"/>
                                        <field name="building_permissions"/>
                                        <field name="building_advertise"/>
                                        <field name="building_advertise_type"/>

                                        <field name="garbage_segrigation"/>
                                        <field name="garbage_disposal"/>
                                        <field name="septic_tank_yes_no"/>
                                        <field name="water_meter_yes_no"/>
                                        <field name="water_connection_year"/>

                                        <field name="licence_no"/>
                                        <field name="licence_date"/>
                                        <field name="year_of_permission"/>
                                        <field name="year_of_construction"/>
                                        <field name="building_age"/>
                                        <field name="building_year"/>
                                        <field name="build_completion_date"/>

                                        <field name="is_fire"/>
                                        <field name="no_of_fire"/>
                                        <field name="water_meter_condition"/>
                                        <field name="is_water_motar"/>
                                        <field name="water_connection_no"/>
                                        <field name="water_consumer_no"/>
                                        <field name="is_etp"/>

                                        <field name="is_home_composting"/>
                                        <field name="is_vermicompost"/>
                                        <field name="is_echarging"/>
                                        <field name="is_sewage_water"/>

                                        <field name="is_const_permission"/>
                                        <field name="const_completion_oc"/>
                                        <field name="gunthewari_certificate"/>

                                        <field name="is_bukhand"/>
                                        <field name="is_construction"/>
                                        <field name="total_no_of_people"/>
                                        <field name="oc_number"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- search -->
        <record id="view_property_info_search" model="ir.ui.view">
        <field name="name">smkc.property.info.search</field>
        <field name="model">smkc.property.info</field>
        <field name="arch" type="xml">
            <search>
                <!-- Define filters -->
                <filter name="filter_upic_no" string="UPIC No" domain="[('upic_no', '!=', False)]"/>
                <filter name="filter_zone" string="Zone" domain="[('new_zone_no', '!=', False)]"/>
                <filter name="filter_ward" string="Ward" domain="[('new_ward_no', '!=', False)]"/>
                <filter name="filter_mobile" string="Mobile" domain="[('mobile_no', '!=', False)]"/>
                
                <!-- Define search fields -->
                <!-- <field name="upic_no" string="UPIC No."/>
                <field name="new_zone_no" string="New Zone" domain="[('id', 'in', [new_zone_no.id])]"/>
                <field name="new_ward_no" string="New Ward" domain="[('id', 'in', [new_ward_no.id])]"/>
                <field name="marathi_owner_name" string="Marathi Owner Name"/>
                <field name="mobile_no" string="Mobile No."/> -->

                <!-- Define grouping options -->
                <group expand="1">
                    <field name="new_zone_no"/>
                    <field name="new_ward_no"/>
                    <field name="mobile_no"/>
                </group>
            </search>
        </field>
    </record>
        


        <!-- Kanban with Dashboard -->
        <record id="view_property_info_kanban" model="ir.ui.view">
            <field name="name">smkc.property.info.kanban</field>
            <field name="model">smkc.property.info</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="false">
                    <field name="property_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="container o_kanban_card_content">
                                <div class="row mt16 mb16">
                                    <!-- Zone Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-light-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Zone</h6>
                                                <h2 class="card-title mb-0"><field name="zone_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Block Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-warning-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Block</h6>
                                                <h2 class="card-title mb-0"><field name="block_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Uploaded Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-info-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Uploaded</h6>
                                                <h2 class="card-title mb-0"><field name="uploaded_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- PDF Downloaded Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-primary-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">PDF Downloaded</h6>
                                                <h2 class="card-title mb-0"><field name="pdf_downloaded_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Plate Installed Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-success-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Plate Installed</h6>
                                                <h2 class="card-title mb-0"><field name="plate_installed_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Surveyed Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-secondary-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Surveyed</h6>
                                                <h2 class="card-title mb-0"><field name="surveyed_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Unlocked Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-warning-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Unlocked</h6>
                                                <h2 class="card-title mb-0"><field name="unlocked_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Visit Again Count -->
                                    <div class="col-6 col-lg-3 mb-3">
                                        <div class="card h-100 bg-danger-subtle">
                                            <div class="card-body text-center">
                                                <h6 class="card-subtitle mb-2 text-muted">Visit Again</h6>
                                                <h2 class="card-title mb-0"><field name="visit_again_count"/></h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action modification to show kanban view first -->
        <record id="action_property_info" model="ir.actions.act_window">
            <field name="name">Property Information</field>
            <field name="res_model">smkc.property.info</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first property!
                </p>
            </field>
        </record>

    </data>
</odoo>
