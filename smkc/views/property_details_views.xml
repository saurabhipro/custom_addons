                    <field name="new_plot_no" optional="hide"/>
                    <field name="bill_no" optional="hide"/>
                    <field name="property_description" optional="show"/>
                    <field name="plot_area" optional="hide"/>
                    <field name="mobile_no" optional="show"/>
                    <field name="old_rental_value" optional="hide"/>
                    <field name="old_property_tax" optional="hide"/>
                    <field name="old_total_tax" optional="hide"/>
                    <field name="new_toilet_no" optional="hide"/>
