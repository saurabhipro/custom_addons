<odoo>
    <data>
        <!-- list and Form View for Ward Model -->
        <record id="view_ward_list" model="ir.ui.view">
            <field name="name">smkc.ward.list</field>
            <field name="model">smkc.ward</field>
            <field name="arch" type="xml">
                <list string="Wards">
                    <field name="name"/>
                    <field name="zone"/>
                </list>
            </field>
        </record>

        <record id="view_ward_form" model="ir.ui.view">
            <field name="name">smkc.ward.form</field>
            <field name="model">smkc.ward</field>
            <field name="arch" type="xml">
                <form string="Ward">
                    <sheet>
                        <header>
                            <button type="object" name="action_print_property_plate_template" string="Generate Plate" class="oe_heighlight"/>
                        </header>
                        <group>
                            <field name="name"/>
                            <field name="zone" options="{'no_create_edit':True,'no_create':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ward" model="ir.actions.act_window">
            <field name="name">Wards</field>
            <field name="res_model">smkc.ward</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_ward_list"/>
        </record>


        
        

    </data>
</odoo>
