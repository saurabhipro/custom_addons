<odoo>
    <data>
        <!-- list and Form View for Ward Model -->
        <record id="view_ward_list" model="ir.ui.view">
            <field name="name">smkc.ward.list</field>
            <field name="model">smkc.ward</field>
            <field name="arch" type="xml">
                <list string="Wards">
                    <field name="name"/>
                    <field name="zone_id"/>
                </list>
            </field>
        </record>

        <record id="view_ward_form" model="ir.ui.view">
            <field name="name">smkc.ward.form</field>
            <field name="model">smkc.ward</field>
            <field name="arch" type="xml">
                <form string="Ward">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="zone_id" options="{'no_create_edit':True,'no_create':True}"/>
                            <field name="pdf_url" widget="url"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_ward" model="ir.actions.act_window">
            <field name="name">Wards</field>
            <field name="res_model">smkc.ward</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_ward_list"/>
        </record>


        <record id="model_smkc_ward_action_server" model="ir.actions.server">
            <field name="name">Pdf Report</field>
            <field name="model_id" ref="smkc.model_smkc_ward"/>
            <field name="binding_model_id" ref="smkc.model_smkc_ward"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">action = records.update_ward()
            
            
            
            </field>
        </record>


        
        

    </data>
</odoo>
