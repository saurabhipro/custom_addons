<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- list and Form View for Property Type Model -->
        <record id="view_property_survey_list" model="ir.ui.view">
            <field name="name">smkc.property.survey.list</field>
            <field name="model">smkc.property.survey</field>
            <field name="arch" type="xml">
                <list string="Property Types">
                    <field name="address_line_1"/>
                    <field name="address_line_2"/>
                    <field name="colony_name"/>
                    <field name="street"/>
                    <field name="house_number"/>
                    <field name="unit"/>
                    <field name="total_floors"/>
                    <field name="floor_number"/>
                    <field name="owner_name"/>
                    <field name="father_name"/>
                    <field name="area"/>
                    <field name="area_code"/>
                    <field name="longitude"/>
                    <field name="latitude"/>
                    <field name="surveyer_id"/>
                    <field name="installer_id"/>
                    <field name="property_image"/>
                    <field name="property_image1"/>

                </list>
            </field>
        </record>

        <record id="view_property_survey_form" model="ir.ui.view">
            <field name="name">smkc.property.survey.form</field>
            <field name="model">smkc.property.survey</field>
            <field name="arch" type="xml">
                <form string="Property Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="address_line_1"/>
                                <field name="address_line_2"/>
                                <field name="colony_name"/>
                                <field name="street"/>
                                <field name="house_number"/>
                                <field name="unit"/>
                                <field name="total_floors"/>
                                <field name="floor_number"/>
                                <field name="owner_name"/>
                            </group>
                            <group>
                                <field name="father_name"/>
                                <field name="area"/>
                                <field name="area_code"/>
                                <field name="longitude"/>
                                <field name="latitude"/>
                                <field name="surveyer_id"/>
                                <field name="installer_id"/>
                                <field name="property_image"/>
                                <field name="property_image1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property_survey" model="ir.actions.act_window">
            <field name="name">Property Survey</field>
            <field name="res_model">smkc.property.survey</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_property_survey_list"/>
        </record>

    </data>
</odoo>