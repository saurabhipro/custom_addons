<?xml version='1.0' encoding='utf-8'?>

<odoo>
    

    <template id="property_details_template" name="UDAN Property Info">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
        <style>
            body {
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                background-color: #0A1628;
                color: #ffffff;
                line-height: 1.6;
            }

            .custom-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }

            /* Header Section */
            .header-section {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 20px 0;
                margin-bottom: 30px;
            }

            .header-title h1 {
                font-size: 2.5rem;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .header-title span {
                color: #FFB800;
            }

            .header-title p {
                color: #B0B7C3;
                font-size: 1.2rem;
                margin: 0;
            }

            .header-logo img {
                width: 80px;
                height: 80px;
            }

            /* Cashback Banner */
            .cashback-banner {
                background-color: #F5F7FF;
                border-radius: 20px;
                padding: 30px;
                margin-bottom: 30px;
                position: relative;
                overflow: hidden;
                color: #0A1628;
            }

            .cashback-content {
                max-width: 60%;
            }

            .cashback-label {
                color: #4A5567;
                font-size: 0.9rem;
                margin-bottom: 10px;
            }

            .cashback-amount {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .cashback-description {
                color: #4A5567;
                margin-bottom: 20px;
            }

            .pay-now-btn {
                background-color: #FFB800;
                color: #0A1628;
                padding: 10px 25px;
                border-radius: 25px;
                text-decoration: none;
                font-weight: 600;
                display: inline-block;
                border: none;
            }

            .pay-now-btn:hover {
                background-color: #FFA500;
                color: #0A1628;
            }

            .cashback-image {
                position: absolute;
                right: 30px;
                top: 50%;
                transform: translateY(-50%);
                width: 200px;
            }

            /* Property Card */
            .property-card {
                background-color: #1A2537;
                border-radius: 20px;
                padding: 30px;
                margin-bottom: 30px;
            }

            .property-info {
                margin-bottom: 20px;
            }

            .info-label {
                color: #B0B7C3;
                font-size: 0.9rem;
                margin-bottom: 5px;
            }

            .info-value {
                color: #ffffff;
                font-size: 1.2rem;
                font-weight: 500;
                margin-bottom: 20px;
            }

            .coordinates-btn {
                background-color: #2D3A4F;
                border: none;
                color: #ffffff;
                padding: 8px 15px;
                border-radius: 15px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
            }

            .coordinates-btn i {
                color: #4A90E2;
            }

            /* Property Images */
            .property-images {
                display: flex;
                flex-direction: column;
                gap: 15px;
                height: 100%;
            }

            .property-image-container {
                position: relative;
                width: 100%;
                height: 160px;
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .property-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .property-image:hover {
                transform: scale(1.05);
            }

            .image-overlay {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                padding: 8px 12px;
                background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
                color: white;
                font-size: 0.85rem;
            }

            @media (max-width: 768px) {
                .header-section {
                    flex-direction: column;
                    text-align: center;
                }

                .header-logo {
                    margin-top: 20px;
                }

                .cashback-content {
                    max-width: 100%;
                }

                .cashback-image {
                    display: none;
                }

                .property-images {
                    flex-direction: row;
                    margin-top: 20px;
                }
                
                .property-image-container {
                    width: calc(50% - 8px);
                    height: 140px;
                }
            }
        </style>

        <div class="custom-container">
            <!-- Header Section -->
            <div class="header-section">
                <div class="header-title">
                    <h1>Welcome to <span>UDAN</span></h1>
                    <p>Sangli Miraj and Kupwad City</p>
                </div>
                <div class="header-logo">
                    <img src="/smkc/static/src/img/logo.png" alt="UDAN Logo"/>
                </div>
            </div>

            <!-- Cashback Banner -->
            <div class="cashback-banner">
                <div class="cashback-content">
                    <div class="cashback-label">GET UP TO</div>
                    <div class="cashback-amount">₹100 Cashback</div>
                    <div class="cashback-description">on Electricity Bill Payment</div>
                    <a href="#" class="pay-now-btn">Pay Now</a>
                    <div style="font-size: 0.8rem; margin-top: 10px; color: #666;">*T&amp;C Apply</div>
                </div>
                <img src="/smkc/static/src/img/cashback-illustration.png" alt="Cashback Offer" class="cashback-image"/>
            </div>

            <!-- Property Information -->
            <t t-foreach="property" t-as="pr">
                <div class="property-card">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="property-info">
                                <div class="info-label">Owner Name</div>
                                <div class="info-value"><t t-esc="pr.owner_name"/></div>
                            </div>

                            <div class="property-info">
                                <div class="info-label">Property Identification Number</div>
                                <div class="info-value"><t t-esc="pr.upic_no"/></div>
                            </div>

                            <div class="property-info">
                                <div class="info-label">Digital Door Number</div>
                                <div class="info-value"><t t-esc="pr.unit_no"/></div>
                            </div>

                            <div class="property-info">
                                <div class="info-label">Latitude &amp; Longitude</div>
                                <div class="info-value">
                                    <a href="#" class="coordinates-btn">
                                        <i class="fas fa-location-dot"></i>
                                        <t t-esc="pr.survey_line_ids[0].latitude"/>° N, <t t-esc="pr.survey_line_ids[0].longitude"/>° E
                                    </a>
                                </div>
                            </div>

                            <div class="property-info">
                                <div class="info-label">Block</div>
                                <div class="info-value"><t t-esc="pr.zone_no.name"/></div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="property-images">
                                <t t-if="pr.survey_line_ids and len(pr.survey_line_ids) > 0">
                                    <div class="property-image-container">
                                        <img t-if="pr.survey_line_ids[0].property_image" 
                                             t-att-src="image_data_uri(pr.survey_line_ids[0].property_image)" 
                                             class="property-image" alt="Property Front View"/>
                                        <div class="image-overlay">Front View</div>
                                    </div>
                                    <div class="property-image-container">
                                        <img t-if="pr.survey_line_ids[0].property_image1" 
                                             t-att-src="image_data_uri(pr.survey_line_ids[0].property_image1)" 
                                             class="property-image" alt="Additional View"/>
                                        <div class="image-overlay">Additional View</div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>

        <!-- Add Bootstrap JS and Popper.js -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    </template>
</odoo>
