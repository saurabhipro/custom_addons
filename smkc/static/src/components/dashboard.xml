<templates xml:space="preserve">
    <t t-name="smkc.OwlCrmTemplate" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">
                                        Property Dashboard - <t t-esc="this.state.property_info['total_count']"></t>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- <KpiCard name="'Total'" value="this.state.property_info['total_count']"/> -->
                        <KpiCard name="'Uploaded'" value="this.state.property_info['total_new']" bgClass="bg-black"/>
                        <KpiCard name="'Pdf Dowmloaded'" value="this.state.property_info['total_uploaded']"/>
                        <KpiCard name="'Plate Installed'" value="this.state.property_info['total_pdf_downloaded']"/>
                        <KpiCard name="'Surveyed'" value="this.state.property_info['total_plate_installed']"/>
                        <KpiCard name="'Unlocked'" value="this.state.property_info['total_surveyed']"/>
                        <KpiCard name="'Discovered'" value="this.state.property_info['total_unlocked']"/>
                    </div>
                    
                </div>
              
            </div>

            <div class="row m-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Ward</th>
                            <th scope="col">Total Count</th>
                            <th scope="col">New</th>
                            <th scope="col">Uploaded</th>
                            <th scope="col">Pdf Dowmloaded</th>
                            <th scope="col">Plate Installed</th>
                            <th scope="col">Surveyed</th>
                            <th scope="col">Unlocked</th>
                            <th scope="col">Discovered</th>


                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="Object.entries(this.state.property_info['result'])" t-as="item" t-key="item[0]">
                            <tr>
                                <td><t t-esc="item[0]"/></td> <!-- Ward name -->
                                <td><t t-esc="item[1].count"/></td>
                                <td><t t-esc="item[1].new"/></td>
                                <td><t t-esc="item[1].uploaded"/></td>
                                <td><t t-esc="item[1].pdf_downloaded"/></td>
                                <td><t t-esc="item[1].surveyed"/></td>
                                <td><t t-esc="item[1].plate_installed"/></td>
                                <td><t t-esc="item[1].unlocked"/></td>
                                <td><t t-esc="item[1].discovered"/></td>
                            </tr>
                        </t>
                        </tbody>
                </table>
            </div>
        </div>
        
    </t>
</templates>






