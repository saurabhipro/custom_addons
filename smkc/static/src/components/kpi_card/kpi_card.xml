
<templates>
    <t t-name="smkc.KpiCardTemplate" owl="1">
        <div class="col-lg-3 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center">
                <div class="h1 fw-bold text-dark"><span t-esc="props.value"/></div>
                <div class="h3 text-muted"><span t-esc="props.name"/></div>
                <div class="h3 mt-5">
                    <span t-attf-class="text-#{ 10 > 0 ? 'success':'danger' }">
                        <span t-attf-class="fa fa-arrow-#{ 10 > 0 ? 'up':'down' }"/>
                        <span><span t-esc="props.percentage"/>%</span>
                        <span>since last Period</span>
                    </span>
                </div>
            </div>
        </div>
    </t>
</templates>
