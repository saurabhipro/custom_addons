<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
        <record id="report_property_detail_qweb" model="ir.actions.report">
            <field name="name">DDN report</field>
            <field name="model">smkc.ward</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">smkc.ddn_template</field>
            <field name="report_file">smkc.ddn_template</field>
            <field name="print_report_name">'%s' % (object.name or 'Plate')</field>
            <field name="binding_model_id" ref="smkc.model_smkc_ward"/>
            <field name="binding_type">action</field>
            <field name="paperformat_id" ref="smkc.psmkc_ddn_pdf_report_format"/>
        </record>

        <template id="ddn_template">
        <t t-call="web.html_container">
           <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-foreach="o.action_pdf_data()" t-as="p">
                        <div t-attf-style="background-image:url('/smkc/static/src/img/WhatsApp Image 2025-03-27 at 12.10.13 AM.jpeg'); width:1280px; height:960px;">
                            <div class="row" style="padding-top:45%;width:50%;margin-left:36%;">
                                <div class="col"><t t-esc="p.new_zone_no.name"/></div>
                                <div class="col"><t t-esc="p.new_ward_no.name"/></div>
                                <div class="col"><t t-esc="p.upic_no"/></div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>


    </data>
</odoo>